<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h4>error</h4>

          <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <h1> Editing Book </h1>
      <%= form_for(@book) do |f| %>
      <div class="field row">
      <label for="book_title"> Title </label>
      <%= f.text_field :title, class:"col-xs-12 book_title" %>
      </div>
      <div class="field row">
      <label for="book_title"> Opinion </label>
      <%= f.text_area :body, class:"col-xs-12 book_body" %>
      </div>
      <br>
      <div class="field row"> <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %> </div>
      <% end %>
      <%= link_to 'Show', book_path(@book), class:"show_#{:id}" %> | <%= link_to 'Back', books_path, class:"back" %>
    </div>
  </div>
</div>
