<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/info', user: @user, book: @book %>
    </div>

    <h3 class="barheadline"> Books </h3>
    <div class="col-lg-9">
      <table class="table table-striped">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td> <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "user_image", fallback: "no_image.jpg", size:'60x60' %>
          <td> <%= link_to book.title, book_path(book), class:"book_#{book.id}" %> </td>
          <td> <%= book.opinion %> </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
